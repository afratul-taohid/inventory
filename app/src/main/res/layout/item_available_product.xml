<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="product"
            type="com.cliniva.enventory.model.Product" />
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/product_item"
        android:layout_margin="10dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_16sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_item_name"
                android:text="@{product.name}"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/colorTextTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_item_category"
                android:text="@{product.category}"
                android:textColor="#FF6969"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_item_unit_hint"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_name" />

            <TextView
                android:id="@+id/tv_item_sub_category"
                android:text="@{product.subCategory}"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorTextSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_item_unit_hint"
                android:text="Inventory:"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorTextTitle"
                android:textStyle="bold|italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                app:layout_constraintEnd_toStartOf="@+id/tv_item_unit"
                app:layout_constraintTop_toBottomOf="@id/tv_item_sub_category" />

            <TextView
                android:id="@+id/tv_item_unit"
                android:text="@{product.amount}"
                android:textSize="@dimen/_12sdp"
                android:textColor="#FF4141"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:layout_marginEnd="@dimen/_8sdp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_item_unit_hint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_item_sub_category" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/rl_content"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rl_header">


            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_collapse_top"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/tv_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Unit"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_unit"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/tv_unit"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/unit_background"
                    android:gravity="center"
                    android:hint="3"
                    android:inputType="numberDecimal"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/item_color"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_unit" />

                <TextView
                    android:id="@+id/tv_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_unit"
                    android:layout_alignTop="@+id/et_unit"
                    android:layout_alignBottom="@+id/et_unit"
                    android:layout_centerVertical="false"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_toEndOf="@+id/et_unit"
                    android:gravity="center"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:text="X"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintStart_toEndOf="@+id/et_unit"
                    app:layout_constraintTop_toBottomOf="@+id/tv_unit"
                    app:layout_constraintBottom_toBottomOf="@+id/et_unit"/>

                <TextView
                    android:id="@+id/tv_unit_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/et_unit_price"
                    android:layout_marginEnd="8dp"
                    android:layout_toEndOf="@+id/tv_unit"
                    android:text="Price per unit"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_x" />

                <EditText
                    android:id="@+id/et_unit_price"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/tv_unit_price"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@+id/tv_x"
                    android:background="@drawable/unit_background"
                    android:gravity="end|center_vertical"
                    android:hint="200"
                    android:inputType="numberDecimal"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    app:layout_constraintStart_toEndOf="@+id/tv_x"
                    app:layout_constraintTop_toBottomOf="@+id/tv_unit_price" />

                <TextView
                    android:id="@+id/tv_price_bdt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/et_unit_price"
                    android:gravity="center"
                    android:paddingStart="5dp"
                    app:layout_constraintTop_toTopOf="@+id/et_unit_price"
                    app:layout_constraintBottom_toBottomOf="@+id/et_unit_price"
                    android:text="BDT"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    app:layout_constraintStart_toEndOf="@+id/et_unit_price" />

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp"
                    android:text="Total"
                    app:layout_constraintTop_toTopOf="@+id/tv_unit_price"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tv_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:paddingEnd="5dp"
                    android:text="600"
                    app:layout_constraintBottom_toBottomOf="@+id/et_unit_price"
                    app:layout_constraintTop_toTopOf="@+id/et_unit_price"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#4CAF50"
                    app:layout_constraintEnd_toStartOf="@+id/tv_total_amount_bdt" />

                <TextView
                    android:id="@+id/tv_total_amount_bdt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="@+id/et_unit_price"
                    app:layout_constraintTop_toTopOf="@+id/et_unit_price"
                    android:text="BDT"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintEnd_toEndOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <ImageButton
                android:id="@+id/ib_available_product_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@drawable/check_circle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_collapse_top"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</layout>