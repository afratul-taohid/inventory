<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="transaction"
            type="com.cliniva.enventory.model.Transaction" />
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/list_item_background"
        android:layout_margin="@dimen/_5sdp"
        android:padding="@dimen/_12sdp">

        <TextView
            android:id="@+id/tv_company_name"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/_13sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorCustomerText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@{transaction.name}"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_company_name"
            android:layout_alignParentEnd="true"
            android:text="@{transaction.price}"
            android:textColor="@color/price_color"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_hint_unpaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_company_name"
            android:background="@drawable/btn_background"
            android:paddingStart="@dimen/_15sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="Unpaid"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_company_name" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_price"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="@{transaction.date}"
            android:textColor="@color/colorCustomerDateText"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintEnd_toEndOf="@+id/tv_price"
            app:layout_constraintTop_toBottomOf="@+id/tv_price" />

        <ImageButton
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_date"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/transparent"
            android:src="@drawable/ic_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_date" />

    </android.support.constraint.ConstraintLayout>
</layout>