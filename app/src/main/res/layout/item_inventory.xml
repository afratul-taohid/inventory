<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/card_background"
    android:layout_marginStart="@dimen/_12sdp"
    android:layout_marginEnd="@dimen/_12sdp"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    android:padding="@dimen/_8sdp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:elevation="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:text="C/A"
        android:id="@+id/tv_item_category"
        android:textSize="@dimen/_15sdp"
        android:textColor="#FF6969"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:text="65x56"
        android:id="@+id/tv_item_size"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/colorTextSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintTop_toTopOf="@id/tv_item_category"
        app:layout_constraintStart_toEndOf="@id/tv_item_category"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_category"/>

    <TextView
        android:text="600 mg"
        android:id="@+id/tv_product_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_11sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_category" />

    <TextView
        android:id="@+id/tv_item_unit_hint"
        android:text="Available: "
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/colorTextTitle"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintEnd_toStartOf="@id/tv_item_unit"
        app:layout_constraintTop_toTopOf="@id/tv_item_category"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_category"/>

    <TextView
        android:text="100 unit"
        android:id="@+id/tv_item_unit"
        android:textSize="@dimen/_13sdp"
        android:textColor="#98078803"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_item_category"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_category"/>

    <TextView
        android:id="@+id/tv_item_last_supply_hint"
        android:text="Last supply: "
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/colorTextSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintEnd_toStartOf="@+id/tv_item_last_supply"
        app:layout_constraintTop_toTopOf="@id/tv_product_weight"
        app:layout_constraintBottom_toBottomOf="@id/tv_product_weight"/>

    <TextView
        android:text="Yesterday"
        android:id="@+id/tv_item_last_supply"
        android:textSize="@dimen/_11sdp"
        android:textColor="#6EDCFD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_product_weight"
        app:layout_constraintBottom_toBottomOf="@id/tv_product_weight"/>

</androidx.constraintlayout.widget.ConstraintLayout>