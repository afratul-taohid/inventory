<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_16sdp">

        <Button
            android:id="@+id/btn_sale"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/btn_background"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Sale"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorItemBackground"
            app:layout_constraintBottom_toBottomOf="@+id/tv_total" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorItemBackground"
            app:layout_constraintBottom_toBottomOf="@+id/et_paid" />

        <Button
            android:id="@+id/btn_buy"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toRightOf="@+id/btn_sale"
            android:background="@drawable/btn_background_buy"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Buy"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="@+id/et_customer_name"
            app:layout_constraintStart_toEndOf="@+id/btn_sale"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_customer_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_42sdp"
            android:layout_below="@+id/btn_sale"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@drawable/list_item_background"
            android:hint="Customer Name"
            android:paddingStart="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            android:paddingEnd="0dp"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@+id/btn_buy" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/relative_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_add_product"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintTop_toBottomOf="@+id/et_customer_name" />

        <Button
            android:id="@+id/btn_add_product"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/et_customer_name"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@drawable/btn_background"
            android:drawableEnd="@drawable/ic_add_circle"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingStart="0dp"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:text="Add product"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/relative_view" />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginBottom="8dp"
            android:text="Total: "
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/border_color"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_add_product"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_total_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="600000 tk "
            app:layout_constraintTop_toBottomOf="@+id/btn_add_product"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/price_color"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:text="Paid: "
            android:layout_marginTop="@dimen/_8sdp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/border_color"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tv_total"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/et_paid"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/list_item_background"
            android:hint="600000 tk "
            app:layout_constraintBottom_toTopOf="@+id/view"
            android:inputType="numberDecimal"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/tv_total"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_due"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:text="Due: "
            android:layout_marginBottom="@dimen/_16sdp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/border_color"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_due_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="600000 tk "
            app:layout_constraintTop_toBottomOf="@+id/view"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#f86868"
            app:layout_constraintEnd_toEndOf="parent" />


        <EditText
            android:id="@+id/tv_customer_note"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/list_item_background"
            android:gravity="center_vertical"
            android:hint="Note"
            android:inputType="text"
            android:layout_marginTop="@dimen/_16sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="0dp"
            android:textSize="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@+id/tv_due_value"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="Autofill" />

        <Button
            android:id="@+id/btn_add_product_done"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/tv_customer_note"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_background_done"
            android:drawableEnd="@drawable/ic_check_circle"
            android:paddingStart="0dp"
            android:paddingEnd="10dp"
            android:text="Done"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/_16sdp"
            android:textColor="#ffffff"
            app:layout_constraintTop_toBottomOf="@+id/tv_customer_note"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
</ScrollView>
