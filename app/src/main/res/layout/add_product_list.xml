<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/tv_add_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ningbo"
        android:layout_marginStart="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    <TextView
        android:id="@+id/tv_add_product_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(A/C)"
        android:layout_alignTop="@+id/tv_add_product_name"
        android:layout_alignBottom="@+id/tv_add_product_name"
        android:gravity="center"
        android:textColor="@color/item_color"
        android:layout_toEndOf="@+id/tv_add_product_name"
        android:paddingStart="10dp"/>

    <TextView
        android:id="@+id/tv_add_product_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="300 gsm"
        android:layout_alignTop="@+id/tv_add_product_type"
        android:layout_alignBottom="@+id/tv_add_product_type"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

    <TextView
        android:id="@+id/tv_add_product_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/item_color"
        android:layout_alignStart="@+id/tv_add_product_name"
        android:layout_below="@+id/tv_add_product_name"/>

    <TextView
        android:id="@+id/tv_add_product_unit_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:layout_toEndOf="@+id/tv_add_product_unit"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_alignTop="@+id/tv_add_product_unit"
        android:layout_alignBottom="@+id/tv_add_product_unit"
        android:gravity="center"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/tv_add_product_price_per_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200"
        android:layout_toEndOf="@id/tv_add_product_unit_x"
        android:layout_alignTop="@id/tv_add_product_unit_x"
        android:layout_alignBottom="@id/tv_add_product_unit_x"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_add_product_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="600"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/tv_add_product_price_per_unit"
        android:layout_alignBottom="@id/tv_add_product_price_per_unit"
        android:gravity="center"
        android:layout_below="@id/tv_add_product_weight"/>
</RelativeLayout>